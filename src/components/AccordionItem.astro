---
interface Props {
    question: string;
    answer: string;
}

const { question, answer } = Astro.props;
---

<details class="group py-4 sm:py-5" data-reveal>
    <summary
        class="flex items-start justify-between gap-6 cursor-pointer list-none [&::-webkit-details-marker]:hidden"
    >
        <span class="text-base sm:text-lg font-medium text-[#373230]">
            {question}
        </span>
        <span class="mt-1 shrink-0">
            <svg
                class="h-5 w-5 text-[#171717]"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
            >
                <path d="M5 12h14" class="origin-center"></path>
                <path
                    d="M12 5v14"
                    class="origin-center transition-transform duration-300 ease-out group-[.is-active]:rotate-90"
                ></path>
            </svg>
        </span>
    </summary>
    <div class="faq-content overflow-hidden">
        <div
            class="faq-inner mt-2 pr-10 text-sm sm:text-base leading-relaxed text-[#6b6b62] origin-top"
        >
            {answer}
        </div>
    </div>
</details>
