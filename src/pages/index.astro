---
import Logo from "../components/Logo.svelte";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";
import FloatingBanner, {
  fetchLatestChangelog,
} from "../components/FloatingBanner.svelte";

const latest = await fetchLatestChangelog();
---

<html
  lang="en"
  class="h-full bg-fixed bg-[length:100%_100%] bg-[linear-gradient(135deg,_#F1EFDF,_#F9F8F4)]"
>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Nook — Open-source, Private, Forever</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Urbanist:wght@600;700;800&family=Inter:wght@400;500;600;700;800&family=Rethink+Sans:ital,wght@0,400..800;1,400..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen w-full text-[#1b1b18] antialiased">
    <FloatingBanner latest={latest} client:load />
    <Header />

    <section
      class="container mx-auto max-w-[1120px] px-[clamp(16px,2vw,28px)] text-center pt-[clamp(36px,16vw,100px)] pb-0"
      data-reveal-parent
    >
      <h1
        class="font-medium tracking-tight leading-[1.1] text-4xl sm:text-5xl md:text-6xl [font-family:var(--font-rethink)] text-[#373230]"
        data-reveal
      >
        <span>Browse. It's yours.</span><br />
        <span>Open-source, Private, Forever.</span>
      </h1>
      <p
        class="mt-[18px] mx-auto max-w-[720px] text-[#6b6b62] text-[clamp(14px,1.6vw,18px)] leading-normal"
        data-reveal
        data-reveal-delay="90"
      >
        The memory of web browsing being quick and easy lives <br /> with us all.
        Fewer pop-ups, less clutter, and finding what.
      </p>
      <div
        class="flex justify-center gap-3 mt-[36px]"
        data-reveal
        data-reveal-delay="140"
      >
        <a
          class="inline-flex items-center justify-center gap-2 px-6 py-2.5 rounded-2xl bg-[#0f0f0e] text-white text-base font-medium border border-[#0f0f0e]"
          href="/download"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            xml:space="preserve"
            width="14"
            height="14"
            viewBox="0 0 814 1000"
            fill="#fff"
            ><path
              d="M788.1 340.9c-5.8 4.5-108.2 62.2-108.2 190.5 0 148.4 130.3 200.9 134.2 202.2-.6 3.2-20.7 71.9-68.7 141.9-42.8 61.6-87.5 123.1-155.5 123.1s-85.5-39.5-164-39.5c-76.5 0-103.7 40.8-165.9 40.8s-105.6-57-155.5-127C46.7 790.7 0 663 0 541.8c0-194.4 126.4-297.5 250.8-297.5 66.1 0 121.2 43.4 162.7 43.4 39.5 0 101.1-46 176.3-46 28.5 0 130.9 2.6 198.3 99.2zm-234-181.5c31.1-36.9 53.1-88.1 53.1-139.3 0-7.1-.6-14.3-1.9-20.1-50.6 1.9-110.8 33.7-147.1 75.8-28.5 32.4-55.1 83.6-55.1 135.5 0 7.8 1.3 15.6 1.9 18.1 3.2.6 8.4 1.3 13.6 1.3 45.4 0 102.5-30.4 135.5-71.3z"
            ></path></svg
          >
          <span>Download</span>
        </a>
        <a
          class="inline-flex items-center justify-center gap-2 px-6 py-2.5 rounded-2xl border border-black/10 bg-white/70 backdrop-blur-md text-base font-medium"
          href="https://opencollective.com/nook-browser"
          ><span>Support Us</span></a
        >
      </div>
    </section>

    <!-- <div class="flex justify-center mt-[clamp(28px,6vw,56px)]">
			<figure class="w-[min(1120px,92vw)] rounded-[18px] border border-black/10 bg-white shadow-[0_24px_60px_rgba(0,0,0,0.12),_0_6px_16px_rgba(0,0,0,0.06)] overflow-hidden">
				<img src="/browser-mock.png" alt="Product preview mock" class="block w-full h-auto" loading="eager" width="2240" height="1260" />
			</figure>
		</div> -->

    <!-- <div
      class="w-full flex justify-center mt-[clamp(28px,6vw,56px)] px-[clamp(16px,2vw,28px)]"
    >
      <img
        src="/browser-mock.png"
        alt="Product preview mock"
        class="block h-auto w-full max-w-[min(1120px,92vw)] object-contain"
        loading="eager"
      />
    </div> -->

    <div
      class="w-full flex justify-center mt-[clamp(28px,6vw,56px)] px-[clamp(16px,2vw,28px)]"
      data-reveal
      data-reveal-delay="180"
    >
      <video
        src="/hero.mp4"
        class="w-full max-w-[min(970px,92vw)] object-contain rounded-2xl"
        autoplay
        loop
        muted
        playsinline></video>
    </div>

    <section
      class="container mx-auto max-w-[1120px] px-[clamp(16px,2vw,28px)] py-[clamp(36px,10vw,72px)]"
      data-reveal-parent
    >
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <div
          data-reveal
          class="rounded-2xl border border-black/10 bg-white/70 backdrop-blur-md p-6"
        >
          <div
            class="h-10 w-10 rounded-xl bg-[#F1EFDF] border border-black/10 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              fill="#171717"
              viewBox="0 0 256 256"
              ><path
                d="M215.79,118.17a8,8,0,0,0-5-5.66L153.18,90.9l14.66-73.33a8,8,0,0,0-13.69-7l-112,120a8,8,0,0,0,3,13l57.63,21.61L88.16,238.43a8,8,0,0,0,13.69,7l112-120A8,8,0,0,0,215.79,118.17ZM109.37,214l10.47-52.38a8,8,0,0,0-5-9.06L62,132.71l84.62-90.66L136.16,94.43a8,8,0,0,0,5,9.06l52.8,19.8Z"
              ></path></svg
            >
          </div>
          <h3 class="mt-4 text-lg font-semibold tracking-tight text-[#373230]">
            Fast by design
          </h3>
          <p class="mt-2 text-sm leading-relaxed text-[#6b6b62]">
            Minimal overhead. Less clutter. Pages feel instant, powered by
            WebKit.
          </p>
        </div>
        <div
          data-reveal
          data-reveal-delay="70"
          class="rounded-2xl border border-black/10 bg-white/70 backdrop-blur-md p-6"
        >
          <div
            class="h-10 w-10 rounded-xl bg-[#F1EFDF] border border-black/10 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              fill="#171717"
              viewBox="0 0 256 256"
              ><path
                d="M192.5,171.47A88.34,88.34,0,0,0,224,101.93c-1-45.71-37.61-83.4-83.24-85.8A88,88,0,0,0,48,102L25.55,145.18c-.09.18-.18.36-.26.54a16,16,0,0,0,7.55,20.62l.25.11L56,176.94V208a16,16,0,0,0,16,16h48a8,8,0,0,0,0-16H72V171.81a8,8,0,0,0-4.67-7.28L40,152l23.07-44.34A7.9,7.9,0,0,0,64,104a72,72,0,0,1,56-70.21V49.38a24,24,0,1,0,16,0V32c1.3,0,2.6,0,3.9.1A72.26,72.26,0,0,1,203.84,80H184a8,8,0,0,0-6.15,2.88L152.34,113.5a24.06,24.06,0,1,0,12.28,10.25L187.75,96h19.79q.36,3.12.44,6.3a72.26,72.26,0,0,1-28.78,59.3,8,8,0,0,0-3.14,7.39l8,64a8,8,0,0,0,7.93,7,8.39,8.39,0,0,0,1-.06,8,8,0,0,0,6.95-8.93ZM128,80a8,8,0,1,1,8-8A8,8,0,0,1,128,80Zm16,64a8,8,0,1,1,8-8A8,8,0,0,1,144,144Z"
              ></path></svg
            >
          </div>
          <h3 class="mt-4 text-lg font-semibold tracking-tight text-[#373230]">
            Optional, Opt-In AI
          </h3>
          <p class="mt-2 text-sm leading-relaxed text-[#6b6b62]">
            When enabled, they provide helpful tools such as chat assistance,
            summaries, up-to-date web insights, and more.
          </p>
        </div>
        <div
          data-reveal
          data-reveal-delay="140"
          class="rounded-2xl border border-black/10 bg-white/70 backdrop-blur-md p-6"
        >
          <div
            class="h-10 w-10 rounded-xl bg-[#F1EFDF] border border-black/10 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              fill="#171717"
              viewBox="0 0 256 256"
              ><path
                d="M232,64a32,32,0,1,0-40,31v17a8,8,0,0,1-8,8H96a23.84,23.84,0,0,0-8,1.38V95a32,32,0,1,0-16,0v66a32,32,0,1,0,16,0V144a8,8,0,0,1,8-8h88a24,24,0,0,0,24-24V95A32.06,32.06,0,0,0,232,64ZM64,64A16,16,0,1,1,80,80,16,16,0,0,1,64,64ZM96,192a16,16,0,1,1-16-16A16,16,0,0,1,96,192ZM200,80a16,16,0,1,1,16-16A16,16,0,0,1,200,80Z"
              ></path></svg
            >
          </div>
          <h3 class="mt-4 text-lg font-semibold tracking-tight text-[#373230]">
            Open-source forever
          </h3>
          <p class="mt-2 text-sm leading-relaxed text-[#6b6b62]">
            Transparent code, permissive license, and a community-driven
            roadmap.
          </p>
        </div>
      </div>
    </section>

    <section
      class="container mx-auto max-w-[1120px] px-[clamp(16px,2vw,28px)] pb-[clamp(42px,10vw,96px)]"
      data-reveal-parent
    >
      <div
        data-reveal
        class="rounded-2xl border border-black/10 bg-white/60 backdrop-blur-md p-6 sm:p-8"
      >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-center">
          <div>
            <h2
              class="text-2xl sm:text-3xl font-semibold tracking-tight text-[#373230]"
            >
              Our pledge
            </h2>
            <ul class="mt-3 space-y-2 text-sm text-[#6b6b62]">
              <li class="flex items-start gap-2">
                <svg
                  class="mt-0.5"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="#171717"
                  aria-hidden="true"
                  ><path d="M9 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"
                  ></path></svg
                ><span>No selling of browsing data. Ever.</span>
              </li>
              <li class="flex items-start gap-2">
                <svg
                  class="mt-0.5"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="#171717"
                  aria-hidden="true"
                  ><path d="M9 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"
                  ></path></svg
                ><span>Features ship when they’re stable and accessible.</span>
              </li>
              <li class="flex items-start gap-2">
                <svg
                  class="mt-0.5"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="#171717"
                  aria-hidden="true"
                  ><path d="M9 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"
                  ></path></svg
                ><span>We keep settings understandable and reversible.</span>
              </li>
            </ul>
            <div class="mt-5 flex gap-3">
              <a
                href="https://github.com/nook-browser/nook"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-xl border border-black/10 bg-white/70 text-sm font-medium"
              >
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="#171717"
                  aria-hidden="true"
                  ><path
                    d="M12 2C6.48 2 2 6.58 2 12.26c0 4.52 2.87 8.36 6.84 9.72.5.1.68-.22.68-.48 0-.23-.01-.99-.01-1.79-2.78.62-3.37-1.21-3.37-1.21-.45-1.18-1.12-1.5-1.12-1.5-.92-.64.07-.63.07-.63 1.02.07 1.56 1.07 1.56 1.07.9 1.59 2.36 1.13 2.94.86.09-.67.35-1.13.63-1.39-2.22-.26-4.56-1.14-4.56-5.09 0-1.12.39-2.03 1.03-2.75-.1-.26-.45-1.3.1-2.7 0 0 .85-.28 2.8 1.05a9.36 9.36 0 0 1 5.1 0c1.95-1.33 2.8-1.05 2.8-1.05.55 1.4.2 2.44.1 2.7.64.72 1.03 1.63 1.03 2.75 0 3.96-2.34 4.83-4.57 5.09.36.32.68.95.68 1.92 0 1.39-.01 2.51-.01 2.85 0 .26.18.58.69.48A10.03 10.03 0 0 0 22 12.26C22 6.58 17.52 2 12 2Z"
                  ></path></svg
                >
                <span>Star on GitHub</span>
              </a>
              <a
                href="https://opencollective.com/nook-browser"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-[#171717] text-white text-sm font-medium border border-[#0f0f0e]"
              >
                <span>Support the project</span>
              </a>
            </div>
          </div>
          <div class="w-full h-full flex flex-col justify-end">
            <img src="/browser-mock.png" alt="Browser" class="w-full h-auto" />
          </div>
        </div>
      </div>
    </section>
  </body>

  <Footer />
</html>
